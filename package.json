{
  "name": "armygrid",
  "version": "0.0.1",
  "description": "Chess MMORTS game, seamless map long term tower defense game.",
  "main": "app.js",
  "scripts": {
    "start": "electron . --disable-gpu",
    "release": "node pre-build.js && electron-builder build --publish always && node pre-build.js",
    "build-dev": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "armygrid.app",
    "productName": "Armygrid",
    "icon": "assets/1.icns",
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "owner": "mansimas",
      "repo": "armygrid-app-mac",
      "token": ""
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null,
      "category": "public.app-category.board-games"
    },
    "dmg": {
      "icon": "assets/2.icns",
      "title": "Armygrid installer",
      "window": {
        "width": 544,
        "height": 408
      }
    }
  },
  "author": "mantas",
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^22.3.2"
  },
  "dependencies": {
    "axios": "^1.3.2",
    "dotenv": "^16.0.3",
    "electron-updater": "^5.3.0"
  }
}
